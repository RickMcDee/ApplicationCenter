<MudElement Class="d-flex justify-space-between align-end">
    @Text
    <MudMenu Icon="@Icons.Material.Filled.MoreVert" Dense="true" Size="Size.Small">
        @if (OnEditClick is not null)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Edit" IconSize="Size.Small" OnClick="OnEditClick">Edit
            </MudMenuItem>
        }
        @if (OnDeleteClick is not null)
        {
            <MudMenuItem Icon="@Icons.Material.Filled.Delete" IconSize="Size.Small" OnClick="OnDeleteClick">Delete
            </MudMenuItem>
        }
    </MudMenu>
</MudElement>

@code {

    [Parameter]
    public required string Text { get; set; }

    [Parameter]
    public Action OnDeleteClick { get; set; } = default!;

    [Parameter]
    public Action OnEditClick { get; set; } = default!;

}