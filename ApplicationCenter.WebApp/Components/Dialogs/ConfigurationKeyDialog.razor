@inject ConfigurationKeyService BackendService;
@inject ISnackbar Snackbar
@inject ILogger<ApplicationDialog> Logger

<MudDialog>
    <DialogContent>
        <MudGrid Class="d-flex flex-column">
            <MudItem xs="4">
                <MudTextField T="string"
                              Label="Name"
                              @bind-Value="Model.Name"
                              Immediate="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField T="string"
                              Label="Description"
                              @bind-Value="Model.Description"
                              Variant="Variant.Outlined"
                              Immediate="true"
                              Lines="5" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@string.IsNullOrWhiteSpace(Model.Name)">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public required Guid ApplicationId { get; set; }

    [Parameter]
    public ConfigurationKeyViewModel Model { get; set; } = new() { Name = string.Empty };

    private async Task Submit()
    {
        try
        {
            Model = await BackendService.AddOrUpdateConfigurationKey(Model, ApplicationId);
            MudDialog.Close(DialogResult.Ok(Model));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error while saving the application {Model.Name}", Severity.Error);
            Logger.LogError(ex, "Error while saving the application {Name} ({Id})", Model.Name, Model.Id);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}